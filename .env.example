# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=imagehosting
DB_USER=imagehosting_user
DB_PASSWORD=your_strong_password_here
DB_SSL=false

# Redis配置
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CONNECTION_TIMEOUT=5000
REDIS_MAX_MEMORY=256mb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# Redis缓存TTL配置（秒）
REDIS_IMAGE_LIST_TTL=3600      # 图片列表缓存，默认1小时
REDIS_IMAGE_INFO_TTL=7200      # 图片信息缓存，默认2小时
REDIS_CONFIG_TTL=1800          # 系统配置缓存，默认30分钟
REDIS_USER_SESSION_TTL=86400   # 用户会话缓存，默认1天
REDIS_API_CACHE_TTL=600        # API缓存，默认10分钟
REDIS_STATISTICS_TTL=300       # 统计数据缓存，默认5分钟

# 应用配置
PORT=3000
NODE_ENV=production
SESSION_SECRET=your_secure_session_secret_here

# R2存储配置（可选）
R2_ENABLED=false
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_ENDPOINT=
R2_BUCKET=
R2_REGION=auto
R2_CUSTOM_DOMAIN=

# 存储类型配置
STORAGE_TYPE=local

# 图片质量配置
IMAGE_QUALITY_WEBP=80
IMAGE_QUALITY_AVIF=75
IMAGE_QUALITY_PNG_OPTIMIZE=true

# 数据库备份配置
AUTO_BACKUP_ENABLED=true
AUTO_BACKUP_INTERVAL_HOURS=24
AUTO_BACKUP_KEEP_COUNT=10
PGDUMP_PATH=pg_dump
PSQL_PATH=psql 
